<?xml version="1.0"  encoding="UTF-8" ?>
<project name="kums-Home" basedir="." default="dist">

	<property name="app.name" value="kums" />
	<!--
	<property name="root.dir" location="F:/project/kums" />
	-->
	<property name="root.dir" location="D:/warRoot/kums" />
		
	<property name="app.dir" location="${root.dir}/defaultroot" />
	<property name="generated.dir" location="${root.dir}/generated" />
	<property name="build.classpath" location="D:/ServerRoot/Java/jdk1.5.0_03" />
	<property name="webserver.home" location="D:/ServerRoot/Tomcat5.5" />

	<property name="jboss.home" location="D:/ServerRoot/jboss-5.0" />
	<property name="jboss.deploy" location="${jboss.home}/server/kurui/deploy" />

	<property name="webserver.deploy" location="${webserver.home}/webapps" />
	<property name="src.dir" location="${root.dir}/src" />
	<property name="class.dir" location="${app.dir}/WEB-INF/classes" />
	<property name="lib.dir" location="${app.dir}/WEB-INF/lib" />
	<property name="dist.dir" location="${root.dir}/dist" />
	<property name="doc.dir" location="${root.dir}/api" />
	<property name="testReport.dir" location="${root.dir}/test" />

	<property name="packages" value="com.kurui.kums.*" />



	<!-- 设置应用环境变量-->
	<path id="compile.classpath">
		<pathelement path="${class.dir}" />
		<fileset dir="${lib.dir}">
			<include name="**/*.jar" />
		</fileset>
	</path>


	<!-- 初始化应用程序，删除相关目录-->
	<target name="clean" description="Delete build files">
		<delete dir="${class.dir}" />
		<delete dir="${dist.dir}" />
	</target>


	<!-- 初始化创建相关应用目录   -->
	<target name="prepare" depends="clean" description="create build,dist files">
		<mkdir dir="${class.dir}" />
		<mkdir dir="${dist.dir}" />
	</target>

	<!-- compile 命令，执行javac编译命令 -->
	<target name="compile" depends="prepare">
		<javac srcdir="${src.dir}" destdir="${class.dir}" debug="on">
			<!--给编译器指定编码，防止出现："警告： 编码 GBK 的不可映射字符"-->
			<compilerarg line="-encoding UTF-8 " />
			<classpath refid="compile.classpath" />
		</javac>

		<copy todir="${class.dir}" includeEmptyDirs="no">
			<fileset dir="${src.dir}">
				<include name="*.properties" />
			</fileset>
		</copy>

		<copy todir="${class.dir}/_config" includeEmptyDirs="no">
			<fileset dir="${src.dir}/_config" />
		</copy>
		<!--
			<copy todir="${class.dir}/_resource" includeEmptyDirs="no">
				<fileset dir="${src.dir}/_resource" />
			</copy>
			-->
	</target>


	<!-- 部署应用程序，将其打war包，依赖于 compile命令 -->
	<target name="dist" depends="compile">
		<war warfile="${dist.dir}/${app.name}.war" webxml="${app.dir}/WEB-INF/web.xml" defaultexcludes="true">
			<fileset dir="${app.dir}">
				<!--部署到WebSpere(类加载检查严格),使用p6spy.jar驱动Oracle时，同时要有dms.jar-->
				<patternset id="notcopyojdbc14_g">
					<exclude name="**/ojdbc14_g.jar" />
					<exclude name="**/ojdbc14dms_g.jar" />
					<exclude name="**/WMQ/*.*" />
				</patternset>

				<!--chart目录不需要-->
				<patternset id="NoUsedLib">
					<exclude name="**/nobuild/*.*" />
					<exclude name="**/temp/*.*" />
					<exclude name="**/unknow/*.*" />
				</patternset>

				<!--chart目录不需要-->
				<patternset id="chart">
					<exclude name="**/chart/*.png" />
				</patternset>
			</fileset>
		</war>
	</target>



	<!-- 打包 JBoss模式 -->
	<target name="distJBoss" depends="compile">
		<war warfile="${dist.dir}/${app.name}.war" webxml="${app.dir}/WEB-INF/web.xml" defaultexcludes="true">
			<fileset dir="${app.dir}">
				<!--部署到WebSpere(类加载检查严格),使用p6spy.jar驱动Oracle时，同时要有dms.jar-->
				<patternset id="notcopyojdbc14_g">
					<exclude name="**/ojdbc14_g.jar" />
					<exclude name="**/ojdbc14dms_g.jar" />
					<exclude name="**/WMQ/*.*" />
				</patternset>

				<!--部署到JBoss需要过滤的包-->
				<patternset id="notcopyJBoss">
					<exclude name="**/jnpserver.jar" />
					<exclude name="**/jsp-api.jar" />
					<exclude name="**/xerces.jar" />
					<exclude name="**/*.jar" />										
				</patternset>

				<!--chart目录不需要-->
				<patternset id="NoUsedLib">
					<exclude name="**/nobuild/*.*" />
					<exclude name="**/temp/*.*" />
					<exclude name="**/unknow/*.*" />
				</patternset>

				<!--chart目录不需要-->
				<patternset id="chart">
					<exclude name="**/chart/*.png" />
				</patternset>
			</fileset>
		</war>
	</target>



	<!-- 部署到   -->
	<target name="deployJboss" depends="clean,prepare,compile,distJBoss">
		<delete dir="${jboss.deploy}/${app.name}.war" />
		<copy todir="${jboss.deploy}" includeEmptyDirs="no">
			<fileset dir="${dist.dir}" />
		</copy>
	</target>


	<!-- 生成说明文档(api)  -->
	<!-- -->

	<target name="javadoc" depends="dist">
		<echo>生成API文档</echo>
		<delete dir="${doc.dir}" />
		<mkdir dir="${doc.dir}" />
		<javadoc packagenames="${packages}" sourcepath="${src.dir}" destdir="${doc.dir}" author="true" version="true" use="true" splitindex="true" windowtitle="${app.name} API" doctitle="${app.name}">
			<classpath refid="compile.classpath" />
		</javadoc>
	</target>

	<!-- 执行一个数据库操作，其中demo为您的数据库名，可测试相关jdbc连接
      查询语句为bin目录下的db.sql                                -->
	<!--
	<target name="mysqlInit">
		<echo>ANT 操作数据库开始.....</echo>
		<sql driver="oracle.jdbc.driver.OracleDriver" url="jdbc:oracle:thin:@192.168.1.226:1521:orcl" userid="finance" password="admin123" src="db.sql" print="yes" value="continue" />
	</target>
	-->
	<!--END-->


	<target name="test">
		<junit printsummary="true">
			<classpath refid="compile.classpath" />
			<batchtest todir="${testReport.dir}">
				<fileset dir="${class.dir}" includes="**/Test*.class">
				</fileset>
			</batchtest>
			<formatter type="brief" usefile="false" />
			<formatter type="xml" usefile="true" />
		</junit>

		<junitreport todir="${testReport.dir}">
			<fileset dir="${testReport.dir}">
				<include name="TEST-*.xml" />
			</fileset>
			<report format="frames" todir="${testReport.dir}/html" />
		</junitreport>

	</target>

















</project>