<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans default-lazy-init="false" default-autowire="no"
	default-dependency-check="none">

	
	<bean name="/monitor/loginloglist"
		class="com.kurui.kums.monitor.action.LoginLogListAction"
		singleton="false" lazy-init="default" autowire="default"
		dependency-check="default">
		<property name="loginlogBiz">
			<ref bean="loginlogBiz" />
		</property>
	</bean>
	<bean name="/monitor/operateLoglist"
		class="com.kurui.kums.monitor.action.OperateLogListAction"
		singleton="false" lazy-init="default" autowire="default"
		dependency-check="default">
		<property name="operateLogBiz">
			<ref bean="operateLogBiz" />
		</property>
	</bean>
	<bean name="loginlogBiz"
		class="com.kurui.kums.monitor.biz.LoginLogBizImp" singleton="false"
		lazy-init="default" autowire="default" dependency-check="default">
		<property name="loginlogDao">
			<ref bean="loginlogDao" />
		</property>
	</bean>

	<bean id="operateLogBiz"
		class="com.kurui.kums.monitor.biz.OperateLogBizImp">
		<property name="transactionManager" ref="transactionManager" />
		<property name="operateLogDAO">
			<ref bean="operateLogDAO" />
		</property>
	</bean>

	<bean id="operateLogDetailBiz"
		class="com.kurui.kums.monitor.biz.OperateLogDetailBizImp">
		<property name="transactionManager" ref="transactionManager" />
		<property name="operateLogDetailDAO">
			<ref bean="operateLogDetailDAO" />
		</property>
	</bean>

	<bean id="loginlogDao"
		class="com.kurui.kums.monitor.dao.LoginLogDAOImp">
		<property name="hibernateTemplate" ref="hibernateTemplate" />
	</bean>

	<bean id="operateLogDAO"
		class="com.kurui.kums.monitor.dao.OperateLogDAOImp">
		<property name="hibernateTemplate" ref="hibernateTemplate" />
	</bean>

	<bean id="operateLogDetailDAO"
		class="com.kurui.kums.monitor.dao.OperateLogDetailDAOImp">
		<property name="hibernateTemplate" ref="hibernateTemplate" />
	</bean>


</beans>